# make yabai aware of sketchybar
yabai -m config external_bar all:32:0

# default layout (can be bsp, stack or float)
yabai -m rule --add app=".*" manage=off

# Define apps for BSP tiling
yabai -m rule --add app="Safari" manage=on
yabai -m rule --add app="Google Chrome" manage=on
yabai -m rule --add app="Code" manage=on
yabai -m rule --add app="Terminal" manage=on
yabai -m rule --add app="iTerm" manage=on
yabai -m rule --add app="Obsidian" manage=on
yabai -m rule --add app="Visual Studio Code" manage=on
yabai -m rule --add app="PyCharm" manage=on
yabai -m rule --add app="ChatGPT" manage=on
yabai -m rule --add app="Microsoft Excel" manage=on
yabai -m rule --add app="Discord" manage=on
yabai -m rule --add app="Notion" manage=on
yabai -m rule --add app="Xcode" manage=on
yabai -m rule --add app="Spotify" manage=on
yabai -m rule --add app="IntelliJ IDEA" manage=on
yabai -m rule --add app="Skim" manage=on
yabai -m rule --add app="Min" manage=on

yabai -m config layout bsp

# New window spawns to the right if vertical split, or bottom if horizontal split
yabai -m config window_placement second_child

# padding set to 12px
yabai -m config top_padding 6
yabai -m config bottom_padding 6
yabai -m config left_padding 6
yabai -m config right_padding 6
yabai -m config window_gap 6

# center mouse on window with focus
# yabai -m config mouse_follows_focus on

# modifier for clicking and dragging with mouse
yabai -m config mouse_modifier alt
# set modifier + left-click drag to move window
yabai -m config mouse_action1 move
# set modifier + right-click drag to resize window
yabai -m config mouse_action2 resize


# when window is dropped in center of another window, swap them (on edges it will split it)
yabai -m mouse_drop_action swap

# frame transparency for visual focus
yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity 0.5

borders active_color=0xffe1e3e4 inactive_color=0xff494d64 width=5.0 &
